<!--miniprogram/pages/time_capsule/capsule.wxml-->
<view class="bg" style="opacity:{{0.65}}">


	<navigator open-type="redirect" style="display:inline" url="../time_capsule/writing/writing">
		<image class="pen-image" src='../../images/timeCapsule/bi.png' style="display:inline"></image>
		<text class="text1">写信</text>
	</navigator>
	<image class="setting-image" src='../../images/timeCapsule/fasong.png' bindtap="settingAndSend"></image>
	<text class="text2">寄信</text>
	<view wx:if="{{finishWriting}}" class="settingTime">
		<view>
			<input type="text" bindinput="getEmail" placeholder="                       请输入您的电子信箱~" class="iputEmail" style="border:0;border-radius:5px;width: 355px;height:500rpx;padding: 10px;resize: none;"></input>
		</view>
		<view class="pickerview">
			<picker mode="date" start="{{createTime}}" end="2050-12-31" bindchange="bindDateChange">
				<text style="">选择收信的日子吧</text>
			</picker>
		</view>
	</view>
</view>