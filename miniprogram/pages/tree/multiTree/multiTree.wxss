/* 导入全局样式 */
@import "../../../app.wxss";
page{
  height: 100%;
  /* background-image: url(https://s1.ax1x.com/2020/05/05/YkMM5V.jpg); */
  background-image: url(https://s1.ax1x.com/2020/05/05/YkM2VI.jpg);
  /* background-repeat: no-repeat; */
  background-size: 100%;
  position: absolute;
 background-position-y: center;
}
/* 顶部的搜索栏和我的树屋 */
.head{
  text-align: center;
  display: flex;
  border-radius: 10rpx;
  /* background-color:#9cf5a8; */
  background-image: url(https://s1.ax1x.com/2020/05/05/YkijPA.jpg);
  background-position-x: center;
  background-position-y: center;
  background-size: 100%;
}

.housebox{
  border-radius: 10rpx;
  width: 500rpx;
  /* box-shadow: 10rpx 10rpx 10rpx 2rpx rgba(0, 0, 0, 0.4); */
}

.allMyHouse{
  margin:0 20rpx;
  /* text-align: center; */
  padding-top: 20rpx;
  width: 600rpx;
  height: 80rpx;
  border-radius: 5%;
  
}
.head image{
  padding-top: 15rpx;
  width: 70rpx;
  height: 70rpx;
}
/* 底部的创建树屋 */
.add{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.5;
  right: 30rpx;
  bottom: 60rpx;
}

/* 跳转我的树屋 */
.myhouses{
  position: fixed;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.9;
  right: 30rpx;
  top: 110rpx;
  box-shadow:2rpx 2rpx 3rpx 9rpx rgb(113, 161, 143);
}
/* 加载情况的文本 */
.text1{
  color: grey;
  font-size: 30rpx;
  padding:10rpx 0rpx;
  text-align: center;
}

.treeHouse-item{
  /* 展示 已经创建的树屋 */
  background-size: 100%;
  background-repeat: no-repeat;
}
