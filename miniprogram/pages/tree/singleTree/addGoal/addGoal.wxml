<view class="center all">
	<view class="my-goal">
		<view class="my-goal-content">
			<image src="../../../../images/kongming.jpg" mode="widthFix" style="width:100%;padding-bottom:10rpx"></image>
			<text>我的目标</text>
			<input bindinput="bindGoal" placeholder="给自己定个小目标吧"></input>
			<text>预计完成时间</text>
			<input bindinput="bindTime" placeholder="如:两天后"></input>
			<button bindtap="bindSubmit" plain hover-class>提交</button>
		</view>
		<mp-toptips msg="{{tips}}" type="{{type}}" show="{{tips}}"></mp-toptips>
	</view>
</view>