page {
  height: 100%;

}

.page {
  height: 100%;
  background-color: rgb(239, 226, 208);
}

.title {
  margin: 50rpx;
  display: flex;
  /*设置显示样式**/
  align-items: center;
  /**子view垂直居中*/
  vertical-align: center;
  /**垂直居中*/
  justify-content: center;
  /**内容居中*/
  flex-direction: row;
  /* 子view排列方式row--水平 column--垂直 */
  color: rgb(241, 221, 193);
  /* text-shadow:5px 1px 6px rgb(133, 113, 94); */
  background-color: rgb(151, 88, 5);
  padding: 10rpx 0 10rpx;
  border-radius: 8rpx;
  margin-top: 0rpx;
}

.swiper-item {
  background-color: rgb(151, 88, 5);
  width: 750rpx;
  height: 800rpx;

}

