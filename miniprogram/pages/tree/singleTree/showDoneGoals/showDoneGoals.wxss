.btn button{
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  color: white;
  background-color:rgb(91,192,222);
  border:0px;
}


.type-line {

  display: flex;

  flex-flow: row;

  justify-content: space-evenly;

}

.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}

.center {
/* color: rgba(241, 180, 82, 0.861); */
  width: 80%;
  height: 77%;
  margin-top: 7%;
  margin-left: 10%;
  /* background-color: rgb(249, 207, 143); */
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  text-align: justify;
}